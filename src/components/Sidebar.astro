---
import SkipLink from './SkipLink.astro'
---

<aside>
  <SkipLink />
  <slot />
</aside>

<style>
  @import 'open-props/media';

  aside {
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    gap: var(--spacing);

    @media (--sm-n-above) {
      gap: var(--spacing-sm);
    }

    @media (--md-n-above) {
      gap: var(--spacing-md);
      width: var(--sidebar-width);
    }

    @media (--lg-n-above) {
      gap: var(--spacing-lg);
    }
  }
</style>
