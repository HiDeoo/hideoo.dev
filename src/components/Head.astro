---
import ThemeProvider from '@components/ThemeProvider.astro'

export interface HeadProps {
  metaDescription: string
  metaTitle?: string
}

export type Props = HeadProps

const { metaDescription, metaTitle } = Astro.props

const author = 'HiDeoo'
const isHome = Astro.url.pathname === '/'

if (!isHome && !metaTitle) {
  throw new Error(`Property 'metaTitle' not found for page '${Astro.url.pathname}'`)
}

const canonicalUrl = new URL(Astro.url.pathname, Astro.site)
const description = metaDescription
const title = isHome ? author : `${metaTitle} | ${author}`

// TODO(HiDeoo)
const ogImageUrl = new URL('/images/og.png', Astro.site)

// FIXME(HiDeoo)
---

<meta charset="utf-8" />

<title>{title}</title>

<link rel="canonical" href={canonicalUrl} />
<link rel="icon" href="/images/favicon.ico" sizes="any" />
<link rel="icon" href="/images/favicon.svg" type="image/svg+xml" />
<link rel="sitemap" href="/sitemap-index.xml" />

<meta name="author" content={author} />
<meta name="color-scheme" content="dark light" />
<meta name="description" property="og:description" content={description} />
<!-- // TODO(HiDeoo)  -->
<meta name="theme-color" media="(prefers-color-scheme: dark)" content="hsl(240 10% 4%)" />
<meta name="theme-color" media="(prefers-color-scheme: light)" content="hsl(0 0% 98%)" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- // TODO(HiDeoo)  -->
<meta property="og:image" content={ogImageUrl} />
<!-- // TODO(HiDeoo)  -->
<meta property="og:image:alt" content={description} />
<!-- // TODO(HiDeoo) correct? -->
<meta property="og:locale" content="en_US" />
<!-- // TODO(HiDeoo)  -->
<meta property="og:title" content={title} />
<!-- // TODO(HiDeoo)  -->
<meta property="og:type" content="profile" />
<meta property="og:url" content={canonicalUrl} />

<meta name="twitter:card" content="summary" />
<!-- // TODO(HiDeoo)  -->
<meta name="twitter:description" content={description} />
<!-- // TODO(HiDeoo)  -->
<meta name="twitter:image" content={ogImageUrl} />
<!-- // TODO(HiDeoo)  -->
<meta name="twitter:image:alt" content={description} />
<!-- // TODO(HiDeoo)  -->
<meta name="twitter:title" content={title} />

<ThemeProvider />
