---
import { type LanguageStats } from '../libs/github'

import LanguageLegend from './LanguageLegend.astro'

export interface Props {
  languageStats: LanguageStats
}

const { languageStats } = Astro.props
---

<script define:vars={{ languageStats }}>
  globalThis.languageStats = languageStats
</script>

<script>
  import '../libs/chart'
</script>

<div>
  <canvas id="languageChart" width="150" height="150"></canvas>
  <ul>
    {languageStats.map((languageStat) => <LanguageLegend languageStat={languageStat} />)}
  </ul>
</div>

<style>
  div {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin-top: var(--size-2);
  }

  ul {
    list-style: none;
    margin: 0;
    margin-block: var(--size-3) 0.5rem;
    padding: 0;
  }
</style>
