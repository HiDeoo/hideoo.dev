---
import { type LanguageStats } from '../libs/github'

import LanguageLegend from './LanguageLegend.astro'

export interface Props {
  languageStats: LanguageStats
}

const { languageStats } = Astro.props
---

<script define:vars={{ languageStats }}>
  globalThis.languageStats = languageStats
</script>

<script>
  import '../libs/chart'
</script>

<div>
  <canvas id="languageChart" width="150" height="150"></canvas>
  <ul>
    {languageStats.map((languageStat) => <LanguageLegend languageStat={languageStat} />)}
  </ul>
</div>

<style>
  @import 'open-props/media';

  div {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: var(--size-3);
    margin-top: var(--size-2);
  }

  ul {
    display: grid;
    column-gap: var(--size-5);
    grid-template-columns: 1fr;
    list-style: none;
    margin: 0;
    padding: 0;
    row-gap: var(--size-1);

    @media (--xs-n-above) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (--sm-n-above) {
      grid-template-columns: repeat(3, 1fr);
    }

    @media (--md-n-above) {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
