---
import ThemeToggle from '@components/ui/ThemeToggle.astro'
---

<header>
  <nav aria-label="Resources">
    <ul>
      <li><a href="https://github.com/HiDeoo" rel="noreferrer" target="_blank">GitHub</a></li>
      <li><a href="https://github.com/HiDeoo/dotfiles" rel="noreferrer" target="_blank">Dotfiles</a></li>
    </ul>
  </nav>
  <ThemeToggle />
</header>

<style>
  header {
    align-items: center;
    color: var(--color-dimmed);
    display: flex;
    font-weight: var(--font-medium);
    gap: var(--size-3);
    justify-content: flex-end;
    left: var(--size-5);
    position: absolute;
    right: var(--size-5);
    top: var(--size-5);
  }

  .infos {
    align-items: center;
    display: flex;
    gap: var(--size-3);
  }

  .title {
    /* font-size: var(--text-xl);
    font-weight: var(--font-medium); */
    font-size: var(--size-7);
    margin-bottom: 0;
  }

  nav {
    align-items: center;
    display: flex;
    gap: var(--size-3);
  }

  ul {
    display: flex;
    gap: var(--size-3);
  }

  a {
    display: block;
    overflow: hidden;
    position: relative;

    &::after {
      background-color: var(--color);
      bottom: 1px;
      content: '';
      height: 2px;
      left: 0;
      opacity: 0;
      position: absolute;
      transform: translateX(-100%);
      width: 100%;

      @media (--motionSafe) {
        transition: opacity var(--duration-300) var(--ease), transform var(--duration-300) var(--ease);
      }
    }

    &:focus {
      outline: none;
    }

    &:is(:hover, :focus-visible)::after {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes dash {
    to {
      background-origin: 1000;
      stroke-dashoffset: 0;
    }
  }
</style>
