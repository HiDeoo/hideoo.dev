---
import { slug } from 'github-slugger'

const title = await Astro.slots.render('default')
---

<h2 class="title" id={slug(title)} set:text={title} />

<style>
  .title {
    color: var(--color);
    font-size: var(--size-6);
    font-weight: var(--font-extrabold);
    letter-spacing: var(--size-px);
    line-height: var(--line-height-8);
    margin-bottom: var(--size-3);
    overflow-wrap: break-word;
    text-shadow:
      var(--size-px) var(--size-px) 0 var(--bg-color),
      calc(var(--size-px) * 2) calc(var(--size-px) * 2) 0 var(--shadow-color);
    text-transform: uppercase;
  }
</style>
