---
import { type GitHubLanguage } from '../libs/github'

import Language from './Language.astro'

export interface Props {
  languages: GitHubLanguage[]
}

const { languages } = Astro.props
---

<ul>{languages.map((language) => <Language language={language} />)}</ul>

<style>
  ul {
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    gap: 0.65rem;
    list-style: none;
    margin: 0;
    overflow-x: auto;
    padding: 0.75rem var(--size-3);
    scrollbar-width: none;

    &::-webkit-scrollbar {
      width: 0;
      height: 0;
    }
  }
</style>
