---
import { type GitHubLanguage } from '../libs/github'

import VisuallyHidden from './VisuallyHidden.astro'

export interface Props {
  language: GitHubLanguage
  last: boolean
}

const { language, last } = Astro.props
---

<li>
  {language.name}
  {last ? <VisuallyHidden end /> : <VisuallyHidden separator />}
</li>

<style define:vars={{ darkColor: language.colors.dark, lightColor: language.colors.light }}>
  li {
    background-color: var(--lightColor);
    border: var(--border-size-1) solid var(--card-border-color);
    display: block;
    font-size: var(--text-size-xs);
    line-height: var(--line-height-xs);
    padding: var(--size-1) var(--size-2);
  }

  :root.dark li {
    background-color: var(--darkColor);
  }
</style>
