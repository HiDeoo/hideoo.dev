---
import { type GitHubLanguage } from '../libs/github'

import LanguageTag from './LanguageTag.astro'
import VisuallyHidden from './VisuallyHidden.astro'

export interface Props {
  languages: GitHubLanguage[]
}

const { languages } = Astro.props
---

<VisuallyHidden>Built with</VisuallyHidden>
<ul>
  {languages.map((language, index) => <LanguageTag language={language} last={index === languages.length - 1} />)}
</ul>

<style>
  ul {
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    gap: 0.65rem;
    list-style: none;
    margin: 0;
    overflow-x: auto;
    padding: 0.75rem var(--size-3);
    scrollbar-width: none;

    &::-webkit-scrollbar {
      width: 0;
      height: 0;
    }
  }
</style>
