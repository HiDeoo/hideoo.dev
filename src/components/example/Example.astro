---
export interface ExampleProps {
  class?: string
  description: string
}

export type Props = ExampleProps

const { class: className, description } = Astro.props
---

<figure aria-label={description} class={className ?? 'not-prose'}>
  <slot />
</figure>

<style>
  figure {
    border: 2px dashed var(--color-gray-600);
    border-radius: calc(var(--rounded) + 1px);
    margin-block: var(--size-6) var(--size-7);
    overflow: hidden;
  }
</style>
